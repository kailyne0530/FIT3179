{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/kailyne0530/FIT3179-2023-S2/main/data/population-estimation.csv"
  },
  "layer": [
    {
      "mark": {"type":"line", "cursor": "pointer"},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {
            "values": ["1950", "1980", "2010", "2040", "2070", "2100"],
            "labelAngle": 0,
            "grid": true
          },
          "title": null
        },
        "y": {
          "field": "PopTotal",
          "type": "quantitative",
          "axis": {"labelExpr": "datum.value / 10000000", "title": "Population (billions)"}
        },
        "strokeDash": {"field": "Predicted", "type": "nominal", "legend": null},
        "tooltip": [
          {"field": "Year", "type": "nominal"},
          {
            "field": "PopTotal",
            "type": "quantitative",
            "format": ",",
            "title": "Population (billions)"
          }
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum.Year == '2023'"}
      ],
      "mark": {"type": "circle", "point": true, "cursor": "pointer"},
      "encoding": {
        "x": {"datum": "2023", "type": "ordinal"},
        "y": {"field": "PopTotal", "type": "quantitative"},
        "tooltip": [
          {"field": "Year", "type": "nominal"},
          {
            "field": "PopTotal",
            "type": "quantitative",
            "format": ",",
            "title": "Population (billions)"
          }
        ],
        "size": {"value": 60}
      }
    },
    {
      "transform": [
        {"filter": "datum.Year == '2100'"}
      ],
      "mark": {"type": "circle", "point": true, "cursor": "pointer"},
      "encoding": {
        "x": {"datum": "2100", "type": "ordinal"},
        "y": {"field": "PopTotal", "type": "quantitative"},
        "tooltip": [
          {"field": "Year", "type": "nominal"},
          {
            "field": "PopTotal",
            "type": "quantitative",
            "format": ",",
            "title": "Population (billions)"
          }
        ],
        "size": {"value": 60}
      }
    },
    {
      "transform": [
        {"filter": "datum.Year == '2086'"}
      ],
      "mark": {"type": "circle", "point": true, "cursor": "pointer"},
      "encoding": {
        "x": {"datum": "2086", "type": "ordinal"},
        "y": {"field": "PopTotal", "type": "quantitative"},
        "tooltip": [
          {"field": "Year", "type": "nominal"},
          {
            "field": "PopTotal",
            "type": "quantitative",
            "format": ",",
            "title": "Population (billions)"
          }
        ],
        "size": {"value": 60},
        "color": {"value": "red"}
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "bold"},
      "encoding": {
        "x": {"datum": "2023"},
        "y": {"value": 70}, 
        "text": {"value": "8.0 B"}
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "lighter"},
      "encoding": {
        "x": {"datum": "2023"},
        "y": {"value": 85}, 
        "text": {"value": "people globally"}
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "lighter"},
      "encoding": {
        "x": {"datum": "2023"},
        "y": {"value": 98}, 
        "text": {"value": "in 2023"}
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "bold"},
      "encoding": {
        "x": {"datum": "2100"},
        "y": {"value": 30}, 
        "text": {"value": "10.3 B"}
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "lighter"},
      "encoding": {
        "x": {"datum": "2100"},
        "y": {"value": 45}, 
        "text": {"value": "people globally"}
      }
    },
    {
      "mark": {"type": "text", "fontWeight": "lighter"},
      "encoding": {
        "x": {"datum": "2100"},
        "y": {"value": 58}, 
        "text": {"value": "in 2100"}
      }
    }
  ],
  "config": {
    "background": "transparent",
    "font": "Open Sans"
  }
}