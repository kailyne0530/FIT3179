{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "An interactive scatter plot of global health statistics by country and year.",
  "data": {"url": "https://raw.githubusercontent.com/kailyne0530/FIT3179-2023-S2/main/data/birth-death.csv"},
  "width": 1100,
  "height": 400, 
  "params": [
    {
    "name": "Year_selection",
    "value": 2022,
    "bind": {
      "input": "range", 
      "min": 2018, 
      "max": 2022, 
      "step": 1,
      "name": "Year"
      }
    }
  ],  
  "layer": [
    {
      "transform": [
        {"filter": {"field": "Country Name", "equal": "Afghanistan"}},
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {
        "type": "text",
        "fontSize": 110,
        "x": 500,
        "y": 200,
        "opacity": 0.06
      },
      "encoding": {"text": {"field": "Year", "type": "ordinal"}}
    },    
    {
      "layer": [
        {
          "mark": {
            "type": "line",
            "size": 4,
            "color": "lightgray",
            "strokeCap": "round",
            "cursor": "pointer"
          },
          "encoding": {
            "x": {
              "field": "Death Rate",
              "type": "quantitative"
            },
            "y": {
              "field": "Birth Rate",
              "type": "quantitative"
            },
            "detail": {"field": "Country Name"},
            "order": {"field": "Year"},
            "opacity": {
              "condition": {
                "test": {"or": [
                  {"param": "hovered", "empty": false}
                ]},
                "value": 0.8
              },
              "value": 0
            }
          }
        },
        {
          "transform": [
              {"filter": "datum.Year == Year_selection"}
            ],
            "params": [
              {
                "name": "Continent_highlight",
                "select": {
                  "type": "point",
                  "fields": ["Continent"]
                },
                "bind": "legend"
              },
              {
                "name": "hovered",
                "select": {
                  "type": "point",
                  "fields": ["Country Name"],
                  "toggle": false,
                  "on": "mouseover"
                }
              }
            ],
            "mark": {
              "type": "point",
              "filled": true,
              "opacity": 0.8,
              "cursor": "pointer"
            },
            "encoding": {
              "x": {
                "field": "Death Rate",
                "type": "quantitative",
                "scale": {"domain": [0, 25]},
                "axis": {"tickCount": 5}, 
                "title": "Death Rate (per 1,000 population)"
              },
              "y": {
                "field": "Birth Rate",
                "type": "quantitative",
                "scale": {"domain": [0, 50]},
                "axis": {"tickCount": 5}, 
                "title": "Birth Rate (per 1,000 population)"
              },
              "color": {
                "field": "Continent", 
                "type": "nominal",
                "scale": {
                  "domain": ["Africa", "Asia", "Europe", "North America", "Oceania", "South America"],
                  "range": ["#A7C7E7", "#C1E1C1", "#FAC898", "#F8C8DC", "#C3B1E1", "#FFE5B4"]
                },
                "legend": {
                  "orient": "top-right"
                }
              },
              "opacity": {
                "condition": {
                  "test": {"or": [
                    {"param": "hovered", "empty": false},
                    {"param": "Continent_highlight", "empty": true},
                    {"field": "Continent", "equal": {"param": "Continent_highlight"}}
                  ]},
                  "value": 0.7
                },
                "value": 0.1
              },
              "size": {
                "condition": {
                  "test": {"or": [
                    {"param": "hovered", "empty": false}
                  ]},
                  "value": 200
                },
                "value": 100
              },
              "tooltip": [
                {"field": "Country Name", "type": "nominal"},
                {"field": "Continent", "type": "nominal"},
                {"field": "Death Rate", "type": "quantitative"},
                {"field": "Birth Rate", "type": "quantitative"}
              ]         
            }
        },
        {
          "transform": [
            {"filter": {"param": "hovered", "empty": false}}, {"filter": "datum.Year !== Year_selection"}
          ],
          "layer": [
            {
              "mark": {
                "type": "text",
                "yOffset": -12,
                "fontSize": 6,
                "color": "gray"
              },
              "encoding": {
                "x": {"field": "Death Rate", "type": "quantitative"},
                "y": {"field": "Birth Rate", "type": "quantitative"},
                "text": {"field": "Year"}
              }
            },
            {
              "mark": {
                "type": "circle", 
                "size": 9,
                "color": "gray"
              },
              "encoding": {
                "x": {"field": "Death Rate", "type": "quantitative"},
                "y": {"field": "Birth Rate", "type": "quantitative"}
              }
            }
          ]
        }
      ]
    }
  ]
}
